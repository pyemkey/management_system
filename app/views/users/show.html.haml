%h1= @user.detail

.basic_information
  %h2 Basic Informations
  = render @user.detail

.work_experiences
  %h2 Work Experience
  = render @user.work_experiences
  = link_to "Add experience", new_user_work_experience_path(@user)

#education
  %h2 Educations
  = render @user.educations
  = link_to "Add Education", new_user_education_path(@user)

#interests
  %h2 Interests
  = render 'users/interest_list'
  = render 'details/interest_form'

#skills
  %h2 Skills
  - if @user.skills.any?
    = render @user.skills

  = simple_form_for @user.skills.new do |f|
    = f.input :name, label: "Add new", placeholder: "You can provide more than one separate by comma"
    = f.hidden_field :user, value: @user.id
    = f.submit "Save"
