%h1= @user.detail

.basic_information
  %h2 Basic Informations
  %p 
    %strong I am 
    = @user.gender
  %p 
    %strong Marital status
    = @user.marital_status
  %p 
    %strong Birthday 
    = format_date(@user.birthday)

  = link_to "Edit", edit_detail_path(@user.detail)

.work_experiences
  %h2 Work Experience
  = render @user.work_experiences

  = link_to "Add experience", new_user_work_experience_path(@user)

#education
  %h2 Educations
  = render @user.educations
  = link_to "Add Education", new_user_education_path(@user)

#interests
  %h2 Interests
  - if @user.interests.any?
    = render @user.interests
  = simple_form_for @user.interests.new do |f|
    = f.input :name, label: "Add new", placeholder: "You can provide more than one separate by comma"
    = f.hidden_field :user, value: @user.id
    = f.submit "Save" 
  %br
